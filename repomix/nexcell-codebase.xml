          aria-label={isCollapsed ? 'Expand chat' : 'Collapse chat'}
          title={isCollapsed ? 'Expand chat' : 'Collapse chat'}
        >
          <MessageSquare
            className={`
              h-5 w-5 text-gray-600 group-hover:text-purple-600
              transition-transform duration-300
              ${isCollapsed ? '' : 'rotate-180'}
